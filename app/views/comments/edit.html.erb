<%= form_for@comment,:url => {:action => :update} do |f| %>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
      </ul>
      

  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>

  </div>
<% end %>
